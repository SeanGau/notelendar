{% extends '/base.pug' %}

{% block main %}
.container.h-100: .d-flex.justify-content-center.align-items-center.h-100
  div(style="min-width: 33vw; padding: 1.5rem; background: #333A; border-radius: 2rem")
    h1 Who's calender
    form(action='/login' method='post')
      .mb-3
        label.form-label(for='username') 帳號
        input.form-control#username(type='text' name='username')
      .mb-3
        label.form-label(for='pwd') 密碼
        input.form-control#pwd(type='password' name='pwd')
      .row
        .col-4: .d-grid: button.btn.btn-info(type='submit') 登入
        .col-auto.ms-auto: .form-check
          input.form-check-input#permanent(type='checkbox' name='permanent')
          label.form-check-label(for='permanent') 記住我
{% endblock %}
{% block script %}
script.
  localStorage.clear();
{% endblock %}